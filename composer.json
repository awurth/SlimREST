{
    "name": "awurth/slim-rest-base",
    "description": "Slim PHP Micro-Framework for building a REST API",
    "keywords": ["slim", "framework", "boilerplate", "skeleton", "rest", "api", "oauth", "eloquent"],
    "homepage": "https://github.com/awurth/slim-rest-base",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexis Wurth",
            "email": "awurth.dev@gmail.com",
            "homepage": "https://github.com/awurth"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^7.0",
        "awurth/slim-validation": "^3.0",
        "bshaffer/oauth2-server-php": "^1.9",
        "cartalyst/sentinel": "^2.0",
        "chadicus/slim-oauth2-http": "^3.1",
        "firebase/php-jwt": "^5.0",
        "illuminate/database": "^5.4",
        "illuminate/events": "^5.4",
        "monolog/monolog": "^1.23",
        "respect/validation": "^1.1",
        "slim/slim": "^3.8",
        "symfony/console": "^3.3",
        "symfony/dotenv": "^3.0",
        "symfony/http-foundation": "^3.3"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php"
    }
}
